../tsconfig.json

# Ignore app directory (Next.js)
../app

# Ignore components (Next.js)
../components

# Ignore lib (Next.js)
../lib

# Ignore public (Next.js)
../public

# Ignore styles (Next.js)
../styles

# Ignore hooks (Next.js)
../hooks

# Ignore types (Next.js)
../types

# Ignore tests
../__tests__

# Ignore scripts
../scripts

# Keep only python-api files
!*.py
!requirements.txt
!Procfile
!railway.json
